extends template

block vars
    - var title = 'Login'

block body
    h1 Log Into Your Account

    if error
        p ERROR: #{error}

    form(method="post")
        input(type="hidden", name="_csrf", value=csrfToken)
        label Email:
            input(type="email", name="email", required=true)
        br

        label Password:
            input(type="password", name="password", required=true)
        br

        input(type="submit")
        