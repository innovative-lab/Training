     <script src="lib/angular.js"></script>
     <script>
          angular.module("app",[])
          .controller("empcontroller",function($scope,$http){
              $scope.emplist=null;
              $scope.my_id="M1036017";
              $scope.mid="";
              $scope.name="";
              $scope.photo="";
              $scope.date="";
              $scope.sttime="";
              $scope.etime="";
              $scope.loc="";
              $scope.details="";
              $scope.join="";
              var refresh=function(){
                   $http.get("/emplist")
                   .success(successHandler)
                   .error(errorHandler)
              };
              refresh();
              function successHandler(r,s,x){
             $scope.emplist=r;             
     };
              function errorHandler(e,s,x){
            alert("Something wrong");           
     };
          $scope.addEmp=function(){
               
               var data={
                   mid : $scope.mid,
                   name : $scope.name,
                   photo : $scope.photo,
                   date :$scope.date,
                   starttime :$scope.sttime,
                   endtime:$scope.etime,
                   location:$scope.loc,
                   Details:$scope.details,
                   Joined:[],
               };
               $http.post("/emplist",data)
               .success(function(r,s,x){
                   console.log("data uploaded on server")
                   refresh();
               })
               .error(errorHandler)
          }
         
          $scope.get_mid=function(Mid,my_id){
                var join_id=my_id;
                console.log($scope.join_id);
                $scope.eid=Mid;
                console.log($scope.eid)
                /*
                console.log($scope.join_id)
                console.log($scope.eid);
                console.log("===================")
                $scope.join=Join;
                 * //////////////////////////////////////////////
                 */
                	$http.put("/emplist"+"/"+$scope.eid , join_id)
			.success(function(r,s,x){
				console.log("update request called..")
				refresh();
		    })
		    .error(errorHandler)
          }
         $scope.pushEmp=function(arg){
         }
     });
     </script>
</head>
