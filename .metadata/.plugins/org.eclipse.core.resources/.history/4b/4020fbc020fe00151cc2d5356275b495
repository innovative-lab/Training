<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<title>Document</title>
	<script src="lib/angular.js"></script>
	<script>
		angular.module("app",[])
		.controller("mycon",function($scope){
			$scope.title="batman";
			
			setTimeout(function(){
				$scope.title="joker";
			//	$scope.$apply();
			    $scope.$digest();
			},3000);
		})
	</script>
</head>
<body ng-app="app" ng-controller="mycon">
	<input type="text" ng-model="title" />
	<h1>{{ title }}</h1>
	
</body>
</html>