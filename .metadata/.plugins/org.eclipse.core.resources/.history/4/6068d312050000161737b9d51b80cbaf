<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<title>Document</title>
	<script src="lib/angular.js"></script>
	<script>
		angular
			.module("app",[])
			.controller("mycon",function($scope){
				$scope.val=$scope.mt;
				$scope.truth=false;
				
				
				$scope.hero=["soumya","pratik","senapaty"];
				
				$scope.addfun=function(){
					console.log($scope.mt);
					$scope.elm= document.createElement("div");
					if($scope.truth==false){
					$scope.truth=true;
					$scope.elm.setAttribute("style","height:50px;background-color:blue;text-align:center");
				    }else{
				    $scope.truth=false;
					$scope.elm.setAttribute("style","height:50px;background-color:silver;text-align:center");
				}
					$scope.elm.innerHTML=$scope.mt;
					document.body.appendChild($scope.elm);
				}
			})
			
				
				
			
	</script>
</head>
<body ng-app="app" ng-controller="mycon">
	<input type="text" ng-model="mt" /><button ng-click="addfun()">add me</button>
	<table ng-repeat="h in hero | filter : mt">
		
		<td>{{ h }}</td>
	</table>
</body>
</html>