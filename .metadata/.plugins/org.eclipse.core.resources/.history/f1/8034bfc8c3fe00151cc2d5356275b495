var fs = require("fs");
var http = require("http");

fs.readFile("./server.config",function(error,data){
	
	var data = JSON.parse(data+"")
	
	var port=data.port;
	var host=data.host;
	
	var server=http.createServer(function(req,res){
		req.writeHead(200,{"Content-type":"text/plain"})
		req.write(req.url);
		req.end();
	})
	
