        <script src="lib/angular.js"></script>
        <script>
          angular.module("event",[])
          .controller("myevent",function($scope,$http){
              $scope.evtlist = null;
              
              $scope.evt = "";
              $scope.name = "";
              $scope.mid = "";
              $scope.loc = "";
              $scope.date = "";
              $scope.stime = "";
              $scope.etime = "";
              $scope.photo = "";
              $scope.desc = "";
                             
              var refresh = function(){
                   $http.get("/evtlist")
                   .success(successHandler)
                   .error(errorHandler);
              };
              refresh();
              function successHandler(r,s,x){
                   $scope.evtlist = r;
              }
              
              function errorHandler(e,s,x){
                   alert("Error! Occured");
              }
              
              $scope.addFun = function(){
                   var data = {
                        
                        eventname : $scope.evt,
                        ename : $scope.name,
                        emid : $scope.mid,
                        eloc : $scope.loc,
                        edate : $scope.date,
                        estime : $scope.stime,
                        eetime : $scope.etime,
                        ephoto : $scope.photo,
                        edesc : $scope.desc
                        
                   };
                   
                   $http.post("/evtlist" , data)
                   .success(function(r,s,x){
                        console.log("data updated on the server");
                        refresh();
                   })
                   .error(errorHandler);
              }
              
          });
        
          
        </script>
        
        
