	<script>
		var can=null;
		var ctx=null;
		var i=475;
		var flag=0;
		var j=300;
		var flag1=0;
		var l=0;
		setInterval(window.onload=function(){
			
			can=document.getElementById("can");
			ctx=can.getContext("2d");
			ctx.beginPath();
		
			if ((i+30) == (j-30) )
			{
				alert("bang! game over");
			}
			
			ctx.beginPath();
			ctx.lineWidth=100;
			ctx.strokeStyle="black";
			ctx.moveTo(500,0);
			ctx.lineTo(500,1100);
			ctx.closePath();			
			ctx.stroke();
			
			ctx.beginPath();
			ctx.lineWidth=40;
			ctx.strokeStyle="gray";
			ctx.moveTo(475,0);
			ctx.lineTo(475,1100);
			ctx.closePath();			
			ctx.stroke();
			
			ctx.beginPath();
			ctx.lineWidth=40;
			ctx.strokeStyle="gray";
			ctx.moveTo(525,0);
			ctx.lineTo(525,1100);
			ctx.closePath();			
			ctx.stroke();
			
			ctx.beginPath();
			ctx.lineWidth=10;
			ctx.strokeStyle="white";
			ctx.moveTo(500,0);
			ctx.lineTo(500,1100);
			ctx.closePath();			
			ctx.stroke();
			
			
			
			
			ctx.beginPath();
			ctx.lineWidth=20;
			ctx.strokeStyle="red";
			ctx.moveTo(475,l+0);
			ctx.lineTo(475,l+50);
			ctx.closePath();			
			ctx.stroke();
			
			l=l+1;
			
			ctx.beginPath();
			ctx.lineWidth=20;
			ctx.strokeStyle="yellow";
			ctx.moveTo(475,700);
			ctx.lineTo(475,900);
			ctx.closePath();			
			ctx.stroke();
			
		
			
			
			
		},10);
			
			
				
			
	</script>
